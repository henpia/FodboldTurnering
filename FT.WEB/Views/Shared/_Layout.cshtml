<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fodbold Turnering</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" />
</head>
<body>
    @* Navigation Bar *@
    <nav class="navbar fixed-top navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Fodbold Turnering", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" 
                    aria-expanded="true" aria-label="Toglle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Turneringer", "Index", "Turnering", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Hold", "Index", "Hold", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Kampe", "Index", "Kamp", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Kampprogram", "Index", "Runde", null, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>

    @* Body Content *@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div id="footer">&copy; @DateTime.Now.Year - Henrik Christiansen</div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")"
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
