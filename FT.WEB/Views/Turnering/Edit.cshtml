@model FT.Entities.Models.Turnering

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center">Ret Turnering</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TurneringId)

    <div class="form-group">
        <div class="col-md-offset-2">
            @Html.LabelFor(model => model.Navn, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Navn, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Navn, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2">
            @Html.LabelFor(model => model.MaxAntalHold, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.MaxAntalHold, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaxAntalHold, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" value="Gem" class="btn btn-primary" />
            @Html.ActionLink("Slet", "Delete", new { id = Model.TurneringId }, new { @class = "btn btn-danger" })
        </div>
    </div>
</div>
}


<div class="text-center">
    @Html.ActionLink("Turneringer", "Index", null, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
